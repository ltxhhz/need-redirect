{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*":["./src/*"]
    },
    // "typeRoots": ["./node_modules/@types","./node_modules/naive-ui/volar.d.ts"],
    // "types": ["@types/**/*","naive-ui/volar"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "env.d.ts",
    "./redirect/**/*.ts"
  ],
  "references": [{
    "path": "./tsconfig.node.json"
  }],
  "vueCompilerOptions": {
    "strictTemplates": false
  }
}